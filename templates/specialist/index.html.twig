{% extends 'base.html.twig' %}

{% block title %}Hello SpecialistController!{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <h1>Welkom dr. {{ app.user.firstName }} {{ app.user.lastName }}</h1>
                    <p>Specialist lijst</p>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">datum</th>
                        <th scope="col">tijd</th>
                        <th scope="col">patient</th>
                        <th scope="col">onderwerp</th>
                        <th scope="col">problemen</th>
                        <th scope="col">opmerking</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for a in app.user.specialistAppointments %}
                    <tr>
                        <td>{{ a.datel | date("d-m-y") }}</td>
                        <td>{{ a.time | date("h:i") }}</td>
                        <td>{{ a.patient.name }}</td>
                        <td>{{ a.subject }}</td>
                        <td>{{ a.problems }}</td>
                        <td>{{ a.discussed }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('/specialist/appointment') }}">Insert</a>
            </div>
        </div>
    </div>
{% endblock %}
